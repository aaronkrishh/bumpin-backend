// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Stage {
  PREP
  POOL
  PLAYOFF
  COMPLETE
}

model Tournament {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  teamCount Int
  teamNames String[]
  bracketType Int
  stage Stage @default(PREP)
  seedingPlayoffs String[]
  seedingConsolation String[]
  scores Score[]
}


enum GameType {
  POOL
  PLAYOFF
}

model Score {
  id     Int     @id @default(autoincrement())
  tournament Tournament @relation(fields: [tournamentId], references: [id])
  tournamentId Int
  teamA String
  teamB String
  teamAScores Int []
  teamBScores Int []
  gameType GameType
  winner String
}

